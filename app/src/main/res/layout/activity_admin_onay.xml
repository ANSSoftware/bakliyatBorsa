<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".AnaMenu">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="405dp"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="179dp"
        android:background="@drawable/duyuru_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch2"
        app:layout_constraintVertical_bias="0.602" />

    <Button
        android:id="@+id/kabul_buton"
        android:layout_width="0dp"
        android:layout_height="81dp"
        android:layout_marginTop="620dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/buttonarkaplan"
        android:enabled="true"
        android:onClick="kabulButonClick"
        android:text="KABUL"
        android:textColor="@color/textcolor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/red_buton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/red_buton"
        android:layout_width="141dp"
        android:layout_height="74dp"
        android:layout_marginStart="40dp"
        android:onClick="redButonClick"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/buttonarkaplan"
        android:enabled="true"
        android:text="RED"
        android:textColor="@color/textcolor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/kabul_buton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        app:layout_constraintVertical_bias="0.441" />

    <Switch
        android:id="@+id/uorbSwitch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="108dp"
        android:fontFamily="@font/goodtimingbd"
        android:scrollbarSize="100dp"
        android:text="ÜRÜNLER"
        android:textColor="@color/sari"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="72dp"
        android:fontFamily="@font/goodtimingbd"
        android:text="BAKİYELER"
        android:textColor="@color/sari"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/switch2"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>